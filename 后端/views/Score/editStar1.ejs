<!DOCTYPE html>
<html lang="en">
    <head>
        <title>星星成就管理</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/achievement.css' />
        <!-- 后端登录 --><link rel="stylesheet" href="https://at.alicdn.com/t/font_1506624_oswwuan5y68.css">
    </head>
    <body>
        <header style="background:#79be3b;width:100%;height:75px;"> 
            <img src="../images/logo.png" style="width:75px;height:75px;float:left;margin-left:30px;"/>
            <p style="float:left;color:white;font-size:35px;line-height:70px;margin-left:40px;">盒我学后台管理系统</p>
        </header>
        <div class="left">
            <div class="nav" style="background: #427911;">
                <a href="/score/achievement">星星成就管理</a>
            </div>
            <div class="nav">
                <a href="/score">返回</a>
            </div>
        </div>
        <div class="right">
            <div class="box1">
                <h2>您搜索的结果是:</h2>
            </div>
            <br/>
            <div class='starbox3'>
                <ul id="all">
                    <li>
                        <div class='starhead'>
                        <h3 class='starhead1'><b>星星数</b></h3>
                        <h3 class='starhead1'><b>成就</b></h3>
                        <h3 class='starhead1'><b>操作</b></h3>
                         </div>
                    </li>
                    <% for(var i = 0 ; i < achieveList.length; i++) {%>
                        <li>
                            <p class='starbody'><%= achieveList[i]["achieveStarNum"] %></p>  
                            <p class='starbody'><%= achieveList[i]["achieveName"] %></p>  
                            <div class='starbody'>
                                <div class='Topicoperation'>
                                    <a href='/score/editstar1?achieveId=<%= achieveList[i].achieveId%>'class='operation1'>
                                        <button style="color: white;border:1px solid white;width: 50px;
                                        height: 30px;">编辑
                                            <input type='submit' style="float: right;border:1px solid #79be3b;background-color: #79be3b;" id='bianji' name="task" value=''></button>
                                    </a>
                                    <a href='/score/deletestar?achieveId=<%= achieveList[i]["achieveId"]%>'><button  style=" width: 50px;
                                        height: 30px;
                                        background-color: #fff;
                                        border:1px solid #888;
                                        color: #79be3b">移除</button></a>
                                </div> 
                            </div>                               
                        </li>
                    <%}%>
                </ul>
            </div>
            <div style=" width: 92%;height:30px;text-align: center;margin:0px auto;"> 
                <div class="page">
                    <div id="page">
                    </div>
                </div>
            </div>
            <div style="margin-right:4%;float:right">
                <a style="text-decoration:none" href='/score/achievement'>
                    <button style="background-color: white;color:#79be3b;border: 1px solid #79be3b;width: 50px;height: 30px;">返回</button>
                </a>
            </div>
        </div>
        <div >
            <div id="pop-container1" style="display: block;">
                <div id="cover-tier1" class="popPosition1"></div>
                <div id="pop-tier1" class="popPosition1">
                    <i id="close-pop1">&#10006;</i>
                    <div style="width:380px;float:left;">
                        <h2 style="float:left;margin-left:20px;margin-top:25px;margin-bottom: 10px;">星星数:</h2>
                        <input type='text' id="achieveStarNum" style="width:340px;height:200px;"name="content1" value='<%= editdata.achieveStarNum%>' />
                    </div>
                    <h2 style="float:left;margin-left:20px;margin-top:25px;" >成就:</h2>
                    <input type='text' id="achieveName" style="width:265px;height:30px;margin-top:25px;"name='score1'value='<%= editdata.achieveName%>'/>
                    <br/>
                    <input value="保存" id="save" type="submit" style="float:right;border:'1px soild #61b3ed';margin-right:20px;width:55px;height:30px;background-color:#79be3b;color:'#ffffff';margin-top: 10px;"/>
            </div>
        </div>
    </body>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script type="text/javascript">    
    function temp(id) {
        return document.getElementById(id);
    }
    // 点击右上角X弹出层隐藏
    temp('close-pop1').onclick = function() {
        temp('pop-container1').style.display = 'none';
        window.location.href="/score/achievement"
    }
    $("#save").click(function(){
        $.ajax({
            url:'editstar',
            method:'post',
            data:{achieveName:$("#achieveName").val(),
            achieveStarNum:$('#achieveStarNum').val()
                
            },
            success:function(data){
                if(data=='success'){
                    window.location.href='/score/achievement'
                }
            }

        })
    })
    function getzz() {
        var a = $("ul#all li");
        var zz =new Array(a.length);
        for(var i=0;i <a.length;i++){
            zz[i]=a[i].innerHTML;
        } //div的字符串数组付给zz
        return zz;
    }
    function change(e){
        pageno=e;
        if(e<1){
            e=1;pageno=1;//就等于第1页 ， 当前页为1
        }
        if(e>pageall){  //如果输入页大于最大页
            e=pageall;pageno=pageall; //输入页和当前页都=最大页
        }
        $("#all").html("");//全部清空
        if(pageno==1){
            var html="";
        }
        else{
            var html="  <li><div class='starhead'><h3 class='starhead1'><b>星星数</b></h3><h3 class='starhead1'><b>成就</b></h3><h3 class='starhead1'><b>操作</b></h3></div></li>"
        }
        for(var i=0;i<pagesize;i++){
            html += '<li>' + zz[(e-1)*pagesize+i] +'</li>';//创建一页的li列表
            if(zz[(e-1)*pagesize+i+1]==null) break;//超出最后的范围跳出
        }
        $("ul#all").html(html);//给ul列表写入html
        var ye="";
        for(var j=1;j<=pageall;j++){
            if(e==j){
                ye=ye+"<span><a href='#' onClick='change("+j+")' style='color:#FF0000'>"+j+"</a></span> "
            }else{
                ye=ye+"<a href='#' onClick='change("+j+")'>"+j+"</a> "
            }
        }
        var pageContent="";
            pageContent +='第<span id=\"a2\">'+pageno+'</span>/';
            pageContent +='<span id="a1">'+pageall+'</span>页';
            pageContent +="<span id='a3' style='margin-left:10px'>"+ye+'</span>';
            pageContent +='<a href="#" style="margin-left:10px;" onClick="change(--pageno)">上一页</a>';
            pageContent +='<a href="#" style="margin-left:5px;" onClick="change(++pageno)">下一页</a>';
            $("#page").html(pageContent);
    }
        var zz=getzz()
        var pageno=1 ; //当前页
        var pagesize=5; //每页多少条信息
        if(zz.length%pagesize==0){
            var  pageall =zz.length/pagesize ;
        }else{
            var  pageall =parseInt(zz.length/pagesize)+1;
        }   //一共多少页
        change(1);
        console.log(window.screen.height);
        console.log(document.body.scrollHeight)

        </script>
</html>