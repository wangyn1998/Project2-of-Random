<!DOCTYPE html>
<html>
    <head>
        <title>盒塘管理</title>
        <link rel='stylesheet' href='/stylesheets/style.css'/>
        <link rel='stylesheet' href='/stylesheets/block.css'/>
        <!-- 后端登录 --><link rel="stylesheet" href="https://at.alicdn.com/t/font_1506624_oswwuan5y68.css">
    </head>
    <body>
        <header style="background:#79be3b;width:100%;height:75px;"> 
            <img src="./images/logo.png" style="width:75px;height:75px;float:left;margin-left:30px;"/>
            <p style="float:left;color:white;font-size:35px;line-height:70px;margin-left:40px;">盒我学后台管理系统</p>
        </header>
        <div class="left">
            <div class="nav">
                <a href="/user">用户管理</a>
            </div>
            <div class="nav" style="background: #427911;">
                <a href="/block">盒塘管理</a>
            </div>
            <div class="nav">
                <a href="/score">积分管理</a>
            </div>
            <div class="nav">
                <a href="/box">盒子管理</a>
            </div>
            <div class="nav">
                <a href="/discovery">发现管理</a>
            </div>
            <div class="nav">
                <a href="/system">系统管理</a>
            </div>
            <div class="nav">
                <a href="/home">返回</a>
            </div>
        </div>
        <div class="right">
            <div class="box1">
                <h2>您搜索的结果是:</h2>
            </div>
            <br/>
            <div class='Blockbox3'>
                <ul id="all">
                    <%if(postList.length==0){%>
                        <li>&nbsp;</li>
                        <%}else{%>
                            <% for(var i = 0 ; i < postList.length; i++) {%>
                                <li> 
                                    <div class='Blockbody'>
                                        <% if(postList[i]["userImage"] == '-'){ %>
                                            <a href="/block/detail?id=<%=postList[i]["postId"]%>"><img class="Blockimg"
                                                src="http://img2.3png.com/eebe5ef277285d150546fd77d248786d2a9e.png"
                                            ></a>
                                        <% }else{ %>
                                            <a href="/block/detail?id=<%=postList[i]["postId"]%>"><img class="Blockimg"
                                                src="<%= postList[i]["userImage"]%>"
                                            ></a>
                                        <% } %>
                                        <p class="post-text" style="font-weight: bold;"><%=postList[i]["userName"]%></p>
                                        <p class="post-text" style="height: 17px;overflow: hidden;"><%=postList[i]["postContent"]%></p>
                                    </div>
                                    <p class='Blockbody'>
                                        <a href="deletepost?id=<%=postList[i]["postId"]%>">
                                            <button class='Blockdel' id="remove">移除</button>
                                        </a>
                                    </p>
                                    <p class='Blockbody'><%=postList[i]["postTime"]%></p>
                                </li>
                            <%}%> 
                        <%}%>
                </ul>
            </div>
            <div style="width:945px;height:30px;text-align:center;margin:20px auto;"> 
                <div class="page">
                    <div id="page">
                    </div>
                </div>
            </div>
            <div style="margin-right:10%;float:right">
                <a href='/block'>
                    <button class="return">返回</button>
                </a>
            </div>
        </div>
    </body>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script type="text/javascript"></script>
    <script>
        // 分页
        function getzz() {
            var a = $("ul#all li");
            var zz =new Array(a.length);
            for(var i=0;i <a.length;i++){
                zz[i]=a[i].innerHTML;
            } //div的字符串数组付给zz
            return zz;
        }
        function change(e){
            pageno=e;
            if(e<1){
                e=1;pageno=1;//就等于第1页 ， 当前页为1
            }
            if(e>pageall){  //如果输入页大于最大页
                e=pageall;pageno=pageall; //输入页和当前页都=最大页
            }
            $("#all").html("");//全部清空
            if(pageno==1){
                var html='<li>'
                            +'<div class="Blockhead">'
                                +'<h3 class="Blockhead1">帖子内容</h3>'
                                +'<h3 class="Blockhead1">操作</h3>'
                                +'<h3 class="Blockhead1">操作时间</h3>'
                            +'</div>'
                        +'</li>';
            }
            else{
                var html='<li>'
                            +'<div class="Blockhead">'
                                +'<h3 class="Blockhead1">帖子内容</h3>'
                                +'<h3 class="Blockhead1">操作</h3>'
                                +'<h3 class="Blockhead1">操作时间</h3>'
                            +'</div>'
                        +'</li>';
            }
            for(var i=0;i<pagesize;i++){
                html += '<li>' + zz[(e-1)*pagesize+i] +'</li>';//创建一页的li列表
                if(zz[(e-1)*pagesize+i+1]==null) break;//超出最后的范围跳出
            }
            $("ul#all").html(html);//给ul列表写入html
            var ye="";
            for(var j=1;j<=pageall;j++){
                if(e==j){
                    ye=ye+"<span><a href='#' onClick='change("+j+")' style='color:#FF0000'>"+j+"</a></span> "
                }else{
                    ye=ye+"<a href='#' onClick='change("+j+")'>"+j+"</a> "
                }
            }
            var pageContent="";
            pageContent +='第<span id=\"a2\">'+pageno+'</span>/';
            pageContent +='<span id="a1">'+pageall+'</span>页';
            pageContent +="<span id='a3' style='margin-left:10px'>"+ye+'</span>';
            pageContent +='<a href="#" style="margin-left:10px;" onClick="change(--pageno)">上一页</a>';
            pageContent +='<a href="#" style="margin-left:5px;" onClick="change(++pageno)">下一页</a>';
            $("#page").html(pageContent);
        }
        var zz=getzz()
        var pageno=1 ; //当前页
        var pagesize=4; //每页多少条信息
        if(zz.length%pagesize==0){
            var pageall = zz.length/pagesize ;
        }else{
            var pageall = parseInt(zz.length/pagesize)+1;
        }   //一共多少页
        change(1);
    </script>
</html>
